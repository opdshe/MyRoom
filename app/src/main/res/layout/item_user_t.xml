<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18.3dp"
            android:layout_marginEnd="18.7dp"
            android:layout_marginTop="11dp"
            card_view:cardCornerRadius="17dp"
            android:layout_margin="10dp">

        <RelativeLayout
                android:id="@+id/firstLin"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:background="#ffffff"
                android:padding="10dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp">

                <ImageView
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/imageIcon"
                        android:layout_width="94dp"
                        android:layout_height="112dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/gunggu"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/imageIcon"
                        android:orientation="vertical">


                    <TextView
                            android:textColor="#000000"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintTop_toTopOf="parent"
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="서울 중구 서소문동" />

                    <TextView

                            android:textColor="#CC765E"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            card_view:layout_constraintTop_toBottomOf="@+id/address"
                            card_view:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/rushHour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="약 20분이내"
                            android:textSize="18sp"/>

                    <TextView
                            android:layout_marginTop="10dp"
                            card_view:layout_constraintTop_toBottomOf="@+id/rushHour"
                            card_view:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/price_s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="매매 5억3천만원 ~"
                            android:textSize="15sp"/>
                    <TextView
                            android:layout_marginTop="2dp"
                            card_view:layout_constraintTop_toBottomOf="@+id/price_s"
                            card_view:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/price_r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전세 2억4천만원 ~"
                            android:textSize="15sp"/>
                    <TextView
                            android:layout_marginTop="2dp"
                            card_view:layout_constraintTop_toBottomOf="@+id/price_r"
                            card_view:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/price_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="월세 1000/80만원~"
                            android:textSize="15sp"/>
                    <ImageView
                           android:id="@+id/img_star"
                            android:layout_width="22dp"
                            android:layout_height="30dp"
                            android:src="@drawable/star_grary"
                            card_view:layout_constraintEnd_toEndOf="parent"
                            card_view:layout_constraintBottom_toBottomOf="parent"
                            android:clickable="true"
                    />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>