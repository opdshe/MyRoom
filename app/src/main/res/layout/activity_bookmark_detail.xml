<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:card_view="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#ff7040"
            android:layout_height="60dp"
            android:id="@+id/const_title">
        <TextView
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/txt_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="SK텔레콤 T타워"
        />
        <TextView
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_source"
                android:id="@+id/txt_dest"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대중교통 50분 이내"
                android:textStyle="bold"
                android:textSize="13dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="서울"
                android:textSize="30dp"
                android:id="@+id/txt_seoul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
                app:layout_constraintTop_toBottomOf="@+id/txt_seoul"
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="11dp"
                app:cardCornerRadius="17dp"
               >

            <RelativeLayout
                    android:id="@+id/firstLin"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:padding="10dp">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                    <ImageView
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="10dp"
                            android:id="@+id/imageIcon"
                            android:layout_width="94dp"
                            android:layout_height="112dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/gunggu"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraint"
                            android:layout_marginStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/imageIcon"
                            android:orientation="vertical">


                        <TextView
                                android:textColor="#000000"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:id="@+id/address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="서울 중구 서소문동" />

                        <TextView

                                android:textColor="#CC765E"
                                android:textStyle="bold"
                                android:layout_marginTop="15dp"
                                app:layout_constraintTop_toBottomOf="@+id/address"
                                app:layout_constraintStart_toStartOf="parent"
                                android:id="@+id/rushHour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="약 20분이내"
                                android:textSize="18sp"/>

                        <TextView
                                android:layout_marginTop="10dp"
                                app:layout_constraintTop_toBottomOf="@+id/rushHour"
                                app:layout_constraintStart_toStartOf="parent"
                                android:id="@+id/price_s"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="매매 5억3천만원 ~"
                                android:textSize="15sp"/>
                        <TextView
                                android:layout_marginTop="2dp"
                                app:layout_constraintTop_toBottomOf="@+id/price_s"
                                app:layout_constraintStart_toStartOf="parent"
                                android:id="@+id/price_r"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="전세 2억4천만원 ~"
                                android:textSize="15sp"/>
                        <TextView
                                android:layout_marginTop="2dp"
                                app:layout_constraintTop_toBottomOf="@+id/price_r"
                                app:layout_constraintStart_toStartOf="parent"
                                android:id="@+id/price_m"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="월세 1000/80만원~"
                                android:textSize="15sp"/>
                        <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/star_yellow"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:clickable="true"
                        />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardview"
                android:text="경기"
                android:textSize="30dp"
                android:id="@+id/txt_gyeonggi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
                app:layout_constraintTop_toBottomOf="@+id/txt_gyeonggi"
                android:id="@+id/cardview_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="11dp"
                app:cardCornerRadius="17dp"
               >

            <RelativeLayout
                    android:id="@+id/firstLin_2"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:padding="10dp">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                    <ImageView
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="10dp"
                            android:id="@+id/imageIcon_2"
                            android:layout_width="94dp"
                            android:layout_height="112dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/goyang"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraint_2"
                            android:layout_marginStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/imageIcon_2"
                            android:orientation="vertical">


                        <TextView
                                android:textColor="#000000"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:id="@+id/address_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="경기 고양시 덕양구 삼송동" />

                        <TextView

                                android:textColor="#CC765E"
                                android:textStyle="bold"
                                android:layout_marginTop="15dp"
                                app:layout_constraintTop_toBottomOf="@+id/address_2"
                                app:layout_constraintStart_toStartOf="parent"
                                android:id="@+id/rushHour_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="약 50분이내"
                                android:textSize="18sp"/>

                        <TextView
                                android:layout_marginTop="10dp"
                                app:layout_constraintTop_toBottomOf="@+id/rushHour_2"
                                app:layout_constraintStart_toStartOf="parent"
                                android:id="@+id/price_s_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="매매 5억1천만원 ~"
                                android:textSize="15sp"/>
                        <TextView
                                android:layout_marginTop="2dp"
                                app:layout_constraintTop_toBottomOf="@+id/price_s_2"
                                app:layout_constraintStart_toStartOf="parent"
                                android:id="@+id/price_r_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="전세 3억7천만원 ~"
                                android:textSize="15sp"/>
                        <TextView
                                android:layout_marginTop="2dp"
                                app:layout_constraintTop_toBottomOf="@+id/price_r_2"
                                app:layout_constraintStart_toStartOf="parent"
                                android:id="@+id/price_m_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="월세 300/45만원~"
                                android:textSize="15sp"/>
                        <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/star_yellow"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:clickable="true"
                        />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardview_2"
                android:text="인천"
                android:textSize="30dp"
                android:id="@+id/txt_incheon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


</LinearLayout>